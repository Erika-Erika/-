.bg {
  background-color: #3c98d5;
  height: 40px;
  display: flex;
  flex-direction: row;
}

.name {
  width: 30%;
  text-align: center;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}

.search {
  width: 70%;
  display: flex;
  flex-direction: row;
  border: 1px solid #ccc;
  height: 25px;
  margin-right: 10px;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}

.search image {
  margin-left: 10px;
}

.search input {
  margin-left: 10px;
  font-size: 13px;
}

.navbg {
  background-color: #f6f5f3;
  height: 36px;
  color: #000;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nav {
  width: 85%;
  height: 36px;
}

.add {
  width: 15%;
  height: 50px;
  line-height: 50px;
  font-size: 50px;
  text-align: right;
  margin-right: 10px;
}

.scroll-view_H {
  height: 40px;
  display: flex;
  flex-direction: row;
  margin-left: 5px;
}

.select {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 20px;
  font-weight: bold;
}

.normal {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
}

.item {
  margin: 10px;
}

.title {
  color: #444;
  /* font-weight: bold; */
  font-size: 18px;
  width: 70%;
}
.top{
  display: flex;
  flex-direction: row;
}
 .pic image {
   position: absolute;
}

.info {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}

.desc {
  width: 90%;
}

.desc text {
  margin-right: 10px;
}

.opr {
  width: 10%;
  margin-right: 120px;
}

.opr view {
  width: 17px;
  height: 12px;
  border: 1px solid #ccc;
  line-height: 10px;
  text-align: center;
  border-radius: 5px;
}

.hr {
  border: 1px solid #ccc;
  opacity: 0.2;
  margin-top: 10px;
}
