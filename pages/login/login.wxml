<!--pages/login/login.wxml-->
<view class="content">
  <view class="hr"></view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="bg">
      <view class="item">
        <view class="name">账号</view>
        <view class="value">
          <input type="text" placeholder="手机号/邮箱/会员名" placeholder-class="holder" name="name"></input>
        </view>
      </view>
      <view class="line"></view>
       <view class="item">
        <view class="name">密码</view>
        <view class="value">
          <input type="password" placeholder="请输入密码" placeholder-class="holder" name="password"></input>
        </view>
      </view>
    </view>
    <button class="btn" form-type="submit">提交</button>
  </form>
</view>
